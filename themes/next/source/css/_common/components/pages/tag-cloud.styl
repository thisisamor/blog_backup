.tag-cloud {
  text-align: center;

  a {
    display: inline-block;
    margin: 10px;
    color: #333; /* Set a single color value for all tags */
  }
}

if (hexo-config('darkmode')) {
  @media (prefers-color-scheme: dark) {
    .tag-cloud a {
      color: #fff; /* Set a different color for tags in dark mode */
    }
  }
}

